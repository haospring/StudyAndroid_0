<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthActivity">

    <TextView
        android:id="@+id/text_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fourth Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Click to Fourth activity"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/text_fourth"
        app:layout_constraintStart_toStartOf="@id/text_fourth"
        app:layout_constraintTop_toBottomOf="@id/text_fourth" />

</androidx.constraintlayout.widget.ConstraintLayout>